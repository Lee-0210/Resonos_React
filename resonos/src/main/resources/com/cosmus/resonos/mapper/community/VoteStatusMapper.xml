<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.cosmus.resonos.mapper.community.VoteStatusMapper">

    <select id="list" resultType="VoteStatus">
        SELECT * FROM vote_status
    </select>
    
    <insert id="insert">
        INSERT INTO vote_status(
        user_id, arg_id
        )
        VALUES (
        #{userId}, #{argId}
        )
    </insert>
    
    <update id="update">
        UPDATE vote_status
        <set>
        arg_id = #{argId}, user_id = #{userId}, created_at = now()
        </set>
        WHERE id = #{id} 
    </update>
    
    <delete id="delete">
        DELETE FROM vote_status WHERE id = #{id}
    </delete>

<!-- deleteByArgId -->
    <delete id="deleteByArgId">
        DELETE FROM vote_status WHERE arg_id = #{argId}
    </delete>

    <!-- userId + postId 로 투표 상태 조회 (중복 투표 방지용) -->
    <select id="selectByUserIdAndPostId" resultType="VoteStatus">
  SELECT 
    vs.*
  FROM 
    vote_status vs
    INNER JOIN com_vote_argument cva ON vs.arg_id = cva.id
  WHERE 
    vs.user_id = #{userId}
    AND cva.vote_id = #{argId}
    </select>

    <!-- userId 로 모든 투표 상태 조회 (투표 변경용) -->
    <select id="selectByUserId" resultType="VoteStatus">
        SELECT * FROM vote_status WHERE user_id = #{userId}
    </select>

    <!-- userId 로 모든 투표 상태 삭제 -->
    <delete id="deleteByUserId">
        DELETE FROM vote_status WHERE user_id = #{userId}
    </delete>

</mapper>

