<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cosmus.resonos.mapper.websocket.ChatMessageMapper">
    <insert id="insert" parameterType="com.cosmus.resonos.domain.websocket.ChatMessage"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_messages(room_id, sender_id, content, created_at)
        VALUES(#{roomId}, #{senderId}, #{content}, NOW())
    </insert>
</mapper>

